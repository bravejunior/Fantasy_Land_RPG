@using Models.DTOs
@model UserRegisterViewModel

@{
	var currentUser = ViewData["CurrentUser"] as Models.Entities.User;
}

@if (currentUser == null)
{
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="register-container">
		<form method="post" asp-action="Register" class="register-form">

			<div class="form-group">
				<label for="text">First name</label>
				<input asp-for="FirstName" type="text" class="form-control" id="InputFirstName">
			</div>

			<div class="form-group">
				<label for="text">Last name</label>
				<input asp-for="LastName" type="text" class="form-control" id="InputLastName">
			</div>

			<div class="form-group">
				<label for="username">Username</label>
				<input asp-for="Username" type="text" class="form-control" id="InputUsername">
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<input asp-for="Password" type="password" class="form-control" id="InputPassword" placeholder="Password">
			</div>

			<div class="form-group">
				<label for="password">Confirm password</label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" id="InputConfirmPassword" placeholder="Confirm Password">
			</div>

			<div class="form-check">
				<input asp-for="RememberMe" type="checkbox" class="form-check-input" id="InputRememberMe" checked>
				<label class="form-check-label" for="RememberMe">Remember me</label>
			</div>

			<label for="gender">Select gender</label>
			<select asp-for="Gender" id="InputGender">
				<option value="Male">Male</option>
				<option value="Female">Female</option>
			</select>


			<button type="submit" class="btn btn-primary">Submit</button>

		</form>

	</div>
}