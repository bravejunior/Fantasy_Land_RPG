@model Fantasy_Land_Web_Client.ViewModels.CharacterIndexViewModel

@{
	var currentUser = ViewData["CurrentUser"] as Models.Entities.User;
}
<body>
	<div class="container">

		<div class="left-banner-top"><div></div></div>
		<div class="main-content-top"><div></div></div>
		<div class="right-banner-top"><div></div></div>

		<div class="left-banner-mid"><div></div></div>

		<div class="main-content">
			@if (currentUser != null)
			{
				if (Model.Characters != null)
				{
					foreach (var c in Model.Characters)
					{
						<div>@c.Name</div>
						foreach (var p in @c.CharacterClass.Portraits)
						{
							if (p.Id == c.CharacterClass.Id)
							{
								string base64String = Convert.ToBase64String(p.ImageData);
								<img class="character-portrait-medium" src="data:image/png;base64,@base64String" alt="character-portrait" />
							}
						}
					}
				}
				<a class="nav-link text-dark" asp-area="" asp-controller="Character" asp-action="CreateCharacter">Create Character</a>
			}
		</div>

		<div class="right-banner-mid"><div></div></div>

		<div class="left-banner-bot"><div></div></div>
		<div class="main-content-bot"><div></div></div>
		<div class="right-banner-bot"><div></div></div>


	</div>
</body>